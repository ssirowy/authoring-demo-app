<header class='top-toolbar'>
    <div class='left-buttons'>
        <div class='logo logo-menu-button-padding'>
            <img src='assets/logo.svg'/>
        </div>
        <div class='title'>
            authoring demo
        </div>
    </div>
</header>
<main>
    <section class='section-container'>
      <article class='zybook-section zb-card'>
        <div class='zb-card-content'>

                  <h2>{{section.title}}</h2>
        <section>
          <h3>Work log</h3>
          <ul>
            {{#each section.zypInfos as |info|}}
            <li>{{info.name}} - {{info.text}} {{moment info.timestamp 'MM-DD-YYYY'}}</li>
            {{/each}}
          </ul>
        </section>

        <section>

            {{#each section.contentResources as |resource|}}

              {{#if resource.componentName}}
                  {{component resource.componentName resource=resource}}
              {{else}}
                  {{resource.type}}
              {{/if}}

            {{/each}}

        </section>
        </div>
        </article>
    </section>
</main>
